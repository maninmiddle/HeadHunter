<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/colorGrey2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvForRoundedImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlack"
            app:cardBackgroundColor="@color/colorGrey"
            app:cardCornerRadius="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Вакансии рядом с вами"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/cvForRoundedImage"
            app:layout_constraintStart_toStartOf="@id/cvForRoundedImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>